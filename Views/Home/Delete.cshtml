@model Mission08_Team0401.Models.TaskItem

<div class="container py-4">
    <h2 class="text-center">Confirm Deletion</h2>
    <p class="text-center">Are you sure you want to delete the following task:</p>
    <h3 class="text-center text-danger">@Model.TaskName</h3>
    
    <form method="post">
        <input type="hidden" asp-for="TaskId">
        <div class="d-flex justify-content-center gap-3">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a class="btn btn-secondary" asp-controller="Home" asp-action="Quadrants">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
        </div>
    </form>
</div>

